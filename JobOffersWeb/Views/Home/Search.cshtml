@model IEnumerable<JobOffersWeb.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Search</h2>


<div class="panel panel-default" style="padding:15px ; margin-bottom:10px">
        <h2 class="panel-heading">     نتائج البحث  </h2>
    
        <div class="row">
            @foreach (var subItem in   Model)
            {


                <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; height:410px">

                    <img src="~/Uploads/@subItem.JobImage" style=" margin:5px; height:250px" />
                    <h3>@Html.DisplayFor(modelItem => @subItem.JobTitle)</h3>
                    <h4>@Html.DisplayFor(modelItem => @subItem.JobContent)</h4>
                    @Html.ActionLink("التفاصيل", "Details", new { JobId = subItem.Id }, new { @class = "btn btn-primary" })

                </div>

            }
        </div>
    </div>

